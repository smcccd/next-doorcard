# =============================================================================
# Environment Configuration Template
# =============================================================================
# Copy this file to .env.local for local development
# Never commit .env.local to version control
#
# For production deployments, set these in your hosting platform (e.g., Vercel)
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Detection
# -----------------------------------------------------------------------------
# NODE_ENV is automatically set by Next.js (development, production, test)
# VERCEL_ENV is set by Vercel (development, preview, production)

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Development: SQLite file database
DATABASE_URL="file:./prisma/dev.db"

# Production example (PostgreSQL):
# DATABASE_URL="postgresql://user:password@localhost:5432/doorcard?schema=public"

# -----------------------------------------------------------------------------
# NextAuth Configuration
# -----------------------------------------------------------------------------
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl"

# Local development
NEXTAUTH_URL="http://localhost:3000"

# Production example (must match OneLogin redirect URI exactly):
# NEXTAUTH_URL="https://test.doorcard.smccd.edu"

# Enable NextAuth debug logging (development only)
# NEXTAUTH_DEBUG="true"

# -----------------------------------------------------------------------------
# OneLogin OAuth Configuration
# -----------------------------------------------------------------------------
# DEV Environment (for local development and preview deployments)
ONELOGIN_CLIENT_ID="your-dev-onelogin-client-id"
ONELOGIN_CLIENT_SECRET="your-dev-onelogin-client-secret"
ONELOGIN_ISSUER="https://smccd.onelogin.com/oidc/2"

# PROD Environment (set these in production environment variables)
# ONELOGIN_CLIENT_ID="your-prod-onelogin-client-id"
# ONELOGIN_CLIENT_SECRET="your-prod-onelogin-client-secret"
# ONELOGIN_ISSUER="https://smccd.onelogin.com/oidc/2"

# -----------------------------------------------------------------------------
# Sentry Error Tracking
# -----------------------------------------------------------------------------
SENTRY_DSN="https://your-sentry-dsn@sentry.io/your-project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/your-project-id"

# Sentry auth token for source map uploads (optional)
# SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# -----------------------------------------------------------------------------
# Microsoft Clarity Analytics
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLARITY_ID="your-clarity-project-id"

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log levels: debug, info, warn, error
# Development default: debug
# Production default: error
LOG_LEVEL="debug"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Show beta banner on all pages
NEXT_PUBLIC_SHOW_BETA_BANNER="true"

# Enable API rate limiting (recommended for production)
ENABLE_RATE_LIMITING="false"

# Enable verbose authentication debugging
ENABLE_AUTH_DEBUG="true"

# -----------------------------------------------------------------------------
# Active Term Configuration
# -----------------------------------------------------------------------------
# Fallback when no database term is active
FALLBACK_ACTIVE_TERM_SEASON="SPRING"
FALLBACK_ACTIVE_TERM_YEAR="2026"

# -----------------------------------------------------------------------------
# Build & Deployment Configuration
# -----------------------------------------------------------------------------
# Turbo configuration (for monorepo setups)
TURBO_CACHE="local"
TURBO_DOWNLOAD_LOCAL_ENABLED="false"
TURBO_REMOTE_ONLY="false"
TURBO_RUN_SUMMARY="false"

# NX Daemon (disable for CI/CD)
NX_DAEMON="false"

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Bundle analyzer (set to "true" to analyze bundle size)
# ANALYZE="false"
